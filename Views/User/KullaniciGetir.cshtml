﻿@model LordMarket.Models.Kullanicilar
@{
    ViewBag.Title = "Kullanicilar Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow-sm border-light rounded" style="max-width: 600px; margin: 20px auto;">
    <div class="card-header bg-dark text-white text-center">
        <h3><b>Kullanicilar Güncelle</b></h3>
    </div>

    @using (Html.BeginForm("KullaniciGuncelle", "Kullanicilar", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="card-body">
            @Html.HiddenFor(k => k.ID)


            <div class="mb-3">
                <label>Username:</label>
                @Html.TextBoxFor(k => k.Username, new { @class = "form-control", id = "Username", required = "required", placeholder = "Username" })

            </div>

            <div class="mb-3">
                <label>Password:</label>
                @Html.TextBoxFor(k => k.Password, new { @class = "form-control", id = "Password", required = "required", placeholder = "Password" })

            </div>

            <div class="mb-3">
                <label>Image:</label>
                @Html.TextBoxFor(k => k.Image, new { @class = "form-control", id = "Image", required = "required", placeholder = "Image" })

            </div>


            <div class="mb-3">
                <label>Tür:</label>
                @Html.DropDownListFor(k => k.Role, new SelectList(new List<string>
                {
                    "Admin",
                    "SuperAdmin",
                    "NormalUser",

                }), "Tür seçin", new { @class = "form-control", required = "required" })
            </div>







            <div class="mb-3">
                <label for="status" class="form-label">Status:</label>
                @Html.DropDownListFor(k => k.Status, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Akif", Value = "true" },
                    new SelectListItem { Text = "Pasif", Value = "false" }
                }, new { @class = "form-select", id = "status", required = "required" })
            </div>
        </div>

        <div class="card-footer text-center">
            <a href="/Kullanicilar/Kullanicilar/" class="btn btn-danger btn-sm">İptal</a>
            <button class="btn btn-success btn-sm">Güncelle</button>
        </div>
    }
</div>


