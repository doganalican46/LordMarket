﻿@{
    ViewBag.Title = "Error - Alley Software";
    Layout = null;
}
@model string

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hata - Lord Tekel Büfe</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: black;
        }

        .error-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(255, 0, 0, 0.3);
            text-align: center;
            max-width: 500px;
            position: relative;
        }

        .error-icon {
            font-size: 60px;
            color: #dc3545;
            margin-bottom: 15px;
        }

        .error-message {
            font-size: 18px;
            margin-top: 15px;
            color: #333;
        }

        .btn-back {
            margin-top: 20px;
        }

        .close-icon {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 24px;
            color: #dc3545;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="error-container">


        <div class="error-icon">
            <i class="fas fa-times-circle"></i> 
        </div>

        <a class="navbar-brand" href="/User/Index">
            <i class="fas fa-code"></i> <strong>LordTekel</strong>
        </a>

        <h1 class="text-danger">Bir Hata Oluştu</h1>
        <p class="error-message">@Model</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-danger btn-back">
            <i class="fas fa-home"></i> Ana Sayfaya Dön
        </a>
    </div>

    <!-- Bootstrap & FontAwesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
</body>
</html>