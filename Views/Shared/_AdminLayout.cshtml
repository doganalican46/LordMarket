<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Lord Tekel Büfe Yönetim Paneli" />
    <title>@ViewBag.Title | Lord Tekel Büfe</title>

    <!-- CSS Dosyaları -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/AdminLayout/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
</head>

<body class="sb-nav-fixed">
    <!-- Üst Navigasyon -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Logo & Marka -->
            <a class="navbar-brand ps-3 fw-bold" href="/Admin/Index">
                <i class="fas fa-store me-2"></i>Lord Tekel Büfe
            </a>

            <!-- Sidebar Toggle -->
            <button class="btn btn-link btn-sm order-1 me-4" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Kullanıcı Menüsü -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle me-1"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Admin/Profil"><i class="fas fa-user me-2"></i>Profil</a></li>
                        <li><a class="dropdown-item" href="/Admin/Ayarlar"><i class="fas fa-cog me-2"></i>Ayarlar</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Admin/CikisYap"><i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Ana Layout -->
    <div id="layoutSidenav">
        <!-- Yan Menü -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark bg-dark">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Genel</div>
                        <a class="nav-link" href="/Admin/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Ana Sayfa
                        </a>

                        <div class="sb-sidenav-menu-heading">Yönetim</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseUrunler" aria-expanded="false" aria-controls="collapseUrunler">
                            <div class="sb-nav-link-icon"><i class="fas fa-box-open"></i></div>
                            Ürünler
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseUrunler">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="/Urun/Urunler">Tüm Ürünler</a>
                                <a class="nav-link" href="/Urun/HizliUrunler">Hızlı Ürünler</a>
                            </nav>
                        </div>

                        <a class="nav-link" href="/Kategori/Kategoriler">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Kategoriler
                        </a>
                        <a class="nav-link" href="/Musteri/Musteriler">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Müşteriler
                        </a>

                        <div class="sb-sidenav-menu-heading">Finans</div>
                        <a class="nav-link" href="/Satis/Satislar">
                            <div class="sb-nav-link-icon"><i class="fas fa-cash-register"></i></div>
                            Satışlar
                        </a>
                        <a class="nav-link" href="/GelirGider/GelirGider">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            Gelir-Gider
                        </a>
                    </div>
                </div>

                <!-- Alt Bilgi -->
                <div class="sb-sidenav-footer bg-dark">
                    <div class="small text-white-50">Giriş Yapan:</div>
                    <span class="text-white">@User.Identity.Name</span>
                </div>
            </nav>
        </div>

        <!-- Ana İçerik -->
        <div id="layoutSidenav_content">
            <main class="py-4">
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="py-3 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">
                            &copy; @DateTime.Now.Year - Lord Tekel Büfe
                        </div>
                        <div class="text-muted">
                            v1.0.0
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JavaScript Dosyaları -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLayout/js/scripts.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- PDF/Excel Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.22/jspdf.plugin.autotable.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#DataTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>