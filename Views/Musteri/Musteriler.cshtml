@model IEnumerable<LordMarket.Models.Musteriler>
@{
    ViewBag.Title = "Musteri Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-users me-2 text-dark"></i>Müşteri Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Müşteriler</li>
            </ol>
        </nav>
    </div>

    <!-- Filtreleme ve Arama -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Müşteri ara...">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end gap-2">
                        <button id="exportExcel" class="btn btn-success" title="Excel'e Aktar">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button id="exportPDF" class="btn btn-danger" title="PDF Oluştur">
                            <i class="fas fa-file-pdf me-1"></i> PDF
                        </button>
                        <button type="button" class="btn tablestyle" data-bs-toggle="modal" data-bs-target="#MusteriEkleModal">
                            <i class="fas fa-plus me-1"></i> Yeni Müşteri
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Müşteri Kartları -->
    <div class="row g-4">
        @foreach (var Musteri in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 fw-semibold text-truncate">@Musteri.MusteriAdSoyad</h5>
                        <span class="badge rounded-pill @(Musteri.Status == true ? "bg-success" : "bg-secondary")">
                            @(Musteri.Status == true ? "Aktif" : "Pasif")
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-light rounded-circle p-3 me-3">
                                <i class="fas fa-user text-primary fs-4"></i>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="text-muted">Toplam Borç</span>
                                <span class="fw-bold text-danger">
                                    @(Musteri.ToplamBorc.HasValue ? Musteri.ToplamBorc.Value.ToString("C2") : "₺0,00")
                                </span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                @{
                                    var borcYuzde = Musteri.ToplamBorc.HasValue && Musteri.ToplamBorc > 0 ?
                                        Math.Min(100, (int)(Musteri.ToplamBorc.Value / 3000 * 100)) : 0;
                                }
                                <div class="progress-bar bg-danger" role="progressbar" style="width: @borcYuzde%;"
                                     aria-valuenow="@borcYuzde" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        
                    </div>
                    <div class="card-footer bg-white border-top-0 pt-0">
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            <a href="/Musteri/MusteriGetir/@Musteri.ID" class="btn btn-sm btn-warning flex-grow-1" title="Düzenle">
                                <i class="fas fa-edit me-1"></i> Düzenle
                            </a>
                            <a href="/Musteri/MusteriSil/@Musteri.ID" class="btn btn-sm btn-danger flex-grow-1"
                               onclick="return confirm('Müşteriyi silmek istediğinize emin misiniz?');" title="Sil">
                                <i class="fas fa-trash me-1"></i> Sil
                            </a>
                        </div>
                        <div class="d-flex justify-content-between flex-wrap gap-2 mt-2">
                            <button type="button" class="btn btn-sm btn-success flex-grow-1"
                                    data-bs-toggle="modal" data-bs-target="#borcOdeModal" onclick="setMusteriId(@Musteri.ID)">
                                <i class="fas fa-money-bill-wave me-1"></i> Borç Öde
                            </button>
                            <button type="button" class="btn btn-sm btn-info flex-grow-1"
                                    data-bs-toggle="modal" data-bs-target="#veresiyeModal" onclick="setMusteriId(@Musteri.ID)">
                                <i class="fas fa-receipt me-1"></i> Veresiye Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    <script>

        let selectedMusteriId = 0;
        function setMusteriId(id) {
            selectedMusteriId = id;
            document.getElementById("borcMusteriId").value = id;
            document.getElementById("veresiyeMusteriId").value = id;
        }

        function submitBorcOdeForm() {
            var id = $('#borcMusteriId').val();
            var tutar = $('#OdenenBorcTutar').val();
            var not = $('#BorcNot').val();
            var odemeTipi = $('#OdemeTipi').val();

            $.post('/Musteri/BorcOde', {
                id: id,
                OdenenBorcTutar: tutar,
                Not: not,
                OdemeTipi: odemeTipi
            }, function () {
                location.reload();
            });
        }


        function submitVeresiyeForm() {
            var id = $('#veresiyeMusteriId').val();
            var tutar = $('#VeresiyeTutar').val();
            var not = $('#VeresiyeNot').val();

            $.post('/Musteri/VeresiyeEkle', { id: id, VeresiyeTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Musteriler" });
            XLSX.writeFile(wb, `Musteriler_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm',
                format: 'a4'
            });

            // Türkçe karakter destekli font yükle (Arial veya custom Base64 font kullanılabilir)
            doc.setFont('helvetica', 'normal');

            doc.setFontSize(16);
            doc.text('Müşteri Listesi', 14, 15, { encoding: "WinAnsi" });

            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString('tr-TR')}`, 14, 22);

            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => {
                return Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim());
            });

            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: {
                    fillColor: [41, 128, 185],
                    textColor: 255,
                    fontStyle: 'bold'
                },
                styles: {
                    fontSize: 8,
                    cellPadding: 2,
                    halign: 'center',
                    overflow: 'linebreak' // metin sığmazsa alt satıra geç
                },
                margin: { top: 30 },
                columnStyles: {
                    // genişlikleri otomatik ayarla
                    0: { cellWidth: 'auto' },
                    1: { cellWidth: 'auto' },
                    2: { cellWidth: 'auto' },
                    3: { cellWidth: 'auto' },
                    4: { cellWidth: 'auto' },
                    5: { cellWidth: 'auto' },
                    6: { cellWidth: 'auto' },
                }
            });

            doc.save(`Musteriler_${new Date().toLocaleDateString('tr-TR')}.pdf`);
        });


        

        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.col-xl-3.col-lg-4.col-md-6.col-sm-12');

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                card.style.display = cardText.includes(searchTerm) ? '' : 'none';
            });
        });


    </script>
}



<!-- Modal -->
<div class="modal fade" id="MusteriEkleModal" tabindex="-1" aria-labelledby="MusteriEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header tablestyle text-white">
                <h5 class="modal-title" id="MusteriEkleModalLabel">Yeni Müşteri Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form action="/Musteri/YeniMusteri" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="MusteriAdSoyad" class="form-label">Müşteri Adı Soyadı</label>
                        <input type="text" id="MusteriAdSoyad" name="MusteriAdSoyad" class="form-control" required placeholder="Müşteri ad soyad girin" />
                    </div>

                    <div class="mb-3">
                        <label for="Notlar" class="form-label">Notlar</label>
                        <textarea id="Notlar" name="Notlar" class="form-control" rows="3" placeholder="Varsa notları girin..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="ToplamBorc" class="form-label">Toplam Borç</label>
                        <input type="text" id="ToplamBorc" name="ToplamBorc" class="form-control" required placeholder="0.00" value="0" />
                    </div>

                    <input type="hidden" name="Status" value="true" />

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn tablestyle">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



<div class="modal fade" id="borcOdeModal" tabindex="-1" aria-labelledby="borcOdeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Borç Öde</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="borcMusteriId" />
                <div class="form-group">
                    <label>Ödenen Borç Tutarı</label>
                    <input type="text" id="OdenenBorcTutar" class="form-control" required />
                </div>

                <div class="form-group mt-2">
                    <label>Ödeme Tipi</label>
                    <select id="OdemeTipi" class="form-control">
                        <option value="Nakit">Nakit</option>
                        <option value="Kart">Kart</option>
                        <option value="NoRapor">Rapora Yansıtma</option>

                    </select>
                </div>

                <div class="form-group mt-2">
                    <label>Kısa Not (İsteğe Bağlı)</label>
                    <textarea id="BorcNot" class="form-control" rows="2" placeholder="Açıklama..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" onclick="submitBorcOdeForm()">Kaydet</button>
            </div>
        </div>
    </div>
</div>





<div class="modal fade" id="veresiyeModal" tabindex="-1" aria-labelledby="veresiyeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Veresiye Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="veresiyeMusteriId" />
                <div class="form-group">
                    <label>Veresiye Tutarı</label>
                    <input type="text" id="VeresiyeTutar" class="form-control" required />
                </div>
                <div class="form-group mt-2">
                    <label>Kısa Not (İsteğe Bağlı)</label>
                    <textarea id="VeresiyeNot" class="form-control" rows="2" placeholder="Açıklama..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-info" onclick="submitVeresiyeForm()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

