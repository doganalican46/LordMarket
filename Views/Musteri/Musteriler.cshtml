@model IEnumerable<LordMarket.Models.Musteriler>
@{
    ViewBag.Title = "Musteri Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-users me-2 text-dark"></i>Müşteri Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Müşteriler</li>
            </ol>
        </nav>
    </div>

    <!-- Filtreleme ve Arama -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Müşteri ara...">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end gap-2">
                        <button id="exportExcel" class="btn btn-success" title="Excel'e Aktar">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button id="exportPDF" class="btn btn-danger" title="PDF Oluştur">
                            <i class="fas fa-file-pdf me-1"></i> PDF
                        </button>
                        <button type="button" class="btn tablestyle" data-bs-toggle="modal" data-bs-target="#MusteriEkleModal">
                            <i class="fas fa-plus me-1"></i> Yeni Müşteri
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Müşteri Kartları -->
    <div class="row g-4">
        @foreach (var Musteri in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card border-0 shadow-sm h-100 rounded-3 customer-card">
                    <!-- Header -->
                    <div class="card-header bg-light border-0 rounded-top-3 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 fw-semibold text-truncate">
                            <i class="fas fa-user-circle text-primary me-1"></i>
                            @Musteri.MusteriAdSoyad
                        </h5>
                        <span class="badge rounded-pill px-3 py-2 @(Musteri.Status==true ? "bg-success" : "bg-secondary")">
                            @(Musteri.Status==true ? "Aktif" : "Pasif")
                        </span>
                    </div>

                    <!-- Body -->
                    <div class="card-body">
                        <!-- Kullanıcı Avatar -->
                        <div class="text-center mb-3">
                            <div class="avatar avatar-lg bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width:60px; height:60px;">
                                <i class="fas fa-user fs-4"></i>
                            </div>
                        </div>

                        <!-- Borç Bilgisi -->
                        <div class="mb-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Toplam Borç</span>
                                <span class="fw-bold text-danger">
                                    @(Musteri.ToplamBorc.HasValue ? Musteri.ToplamBorc.Value.ToString("C2") : "₺0,00")
                                </span>
                            </div>
                            <div class="progress mt-1" style="height: 8px; border-radius: 6px;">
                                @{
                                    var borcYuzde = Musteri.ToplamBorc.HasValue && Musteri.ToplamBorc > 0 ?
                                        Math.Min(100, (int)(Musteri.ToplamBorc.Value / 3000 * 100)) : 0;
                                }
                                <div class="progress-bar bg-gradient bg-danger" role="progressbar" style="width:@borcYuzde%;" aria-valuenow="@borcYuzde" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer bg-white border-0 pt-0">
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="/Musteri/MusteriGetir/@Musteri.ID" class="btn btn-sm btn-warning w-100">
                                    <i class="fas fa-edit me-1"></i> Düzenle
                                </a>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-sm btn-danger w-100"
                                        data-bs-toggle="modal"
                                        data-bs-target="#musteriSilModal"
                                        onclick="setSilMusteriId(@Musteri.ID, '@Musteri.MusteriAdSoyad')">
                                    <i class="fas fa-trash me-1"></i> Sil
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-sm btn-success w-100"
                                        data-bs-toggle="modal" data-bs-target="#borcOdeModal" onclick="setMusteriId(@Musteri.ID)">
                                    <i class="fas fa-money-bill-wave me-1"></i> Borç Öde
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-sm btn-info w-100"
                                        data-bs-toggle="modal" data-bs-target="#veresiyeModal" onclick="setMusteriId(@Musteri.ID)">
                                    <i class="fas fa-receipt me-1"></i> Veresiye
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Ekstra Hover Efekti -->
    <style>
        .customer-card {
            transition: all 0.2s ease-in-out;
        }

            .customer-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            }
    </style>

</div>


@section Scripts {
    <script>

        let selectedMusteriId = 0;
        function setMusteriId(id) {
            selectedMusteriId = id;
            document.getElementById("borcMusteriId").value = id;
            document.getElementById("veresiyeMusteriId").value = id;
        }

        function submitBorcOdeForm() {
            var id = $('#borcMusteriId').val();
            var tutar = $('#OdenenBorcTutar').val();
            var not = $('#BorcNot').val();
            var odemeTipi = $('#OdemeTipi').val();

            $.post('/Musteri/BorcOde', {
                id: id,
                OdenenBorcTutar: tutar,
                Not: not,
                OdemeTipi: odemeTipi
            }, function () {
                location.reload();
            });
        }


        function submitVeresiyeForm() {
            var id = $('#veresiyeMusteriId').val();
            var tutar = $('#VeresiyeTutar').val();
            var not = $('#VeresiyeNot').val();

            $.post('/Musteri/VeresiyeEkle', { id: id, VeresiyeTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Musteriler" });
            XLSX.writeFile(wb, `Musteriler_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm',
                format: 'a4'
            });

            // Türkçe karakter destekli font yükle (Arial veya custom Base64 font kullanılabilir)
            doc.setFont('helvetica', 'normal');

            doc.setFontSize(16);
            doc.text('Müşteri Listesi', 14, 15, { encoding: "WinAnsi" });

            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString('tr-TR')}`, 14, 22);

            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => {
                return Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim());
            });

            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: {
                    fillColor: [41, 128, 185],
                    textColor: 255,
                    fontStyle: 'bold'
                },
                styles: {
                    fontSize: 8,
                    cellPadding: 2,
                    halign: 'center',
                    overflow: 'linebreak' // metin sığmazsa alt satıra geç
                },
                margin: { top: 30 },
                columnStyles: {
                    // genişlikleri otomatik ayarla
                    0: { cellWidth: 'auto' },
                    1: { cellWidth: 'auto' },
                    2: { cellWidth: 'auto' },
                    3: { cellWidth: 'auto' },
                    4: { cellWidth: 'auto' },
                    5: { cellWidth: 'auto' },
                    6: { cellWidth: 'auto' },
                }
            });

            doc.save(`Musteriler_${new Date().toLocaleDateString('tr-TR')}.pdf`);
        });




        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.col-xl-3.col-lg-4.col-md-6.col-sm-12');

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                card.style.display = cardText.includes(searchTerm) ? '' : 'none';
            });
        });


        function setSilMusteriId(id, adSoyad) {
            document.getElementById("silMusteriId").value = id;
            document.getElementById("silMusteriAd").innerText = adSoyad;
            document.getElementById("silOnayBtn").setAttribute("href", "/Musteri/MusteriSil/" + id);
        }



    </script>
}



<!-- Modal -->
<!-- Yeni Müşteri Ekle Modal -->
<div class="modal fade" id="MusteriEkleModal" tabindex="-1" aria-labelledby="MusteriEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-3">

            <!-- Header -->
            <div class="modal-header " style="background-color: #003d60; color:white;">
                <h5 class="modal-title" id="MusteriEkleModalLabel">
                    <i class="fas fa-user-plus me-2"></i> Yeni Müşteri Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <!-- Form -->
            <form action="/Musteri/YeniMusteri" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <!-- Ad Soyad -->
                    <div class="form-floating mb-3">
                        <input type="text" id="MusteriAdSoyad" name="MusteriAdSoyad" class="form-control" placeholder="Müşteri Adı Soyadı" required />
                        <label for="MusteriAdSoyad">Müşteri Adı Soyadı</label>
                    </div>

                    <!-- Notlar -->
                    <div class="form-floating mb-3">
                        <textarea id="Notlar" name="Notlar" class="form-control" placeholder="Notlar" style="height:100px"></textarea>
                        <label for="Notlar">Notlar (İsteğe Bağlı)</label>
                    </div>

                    <!-- Toplam Borç -->
                    <div class="form-floating mb-3">
                        <input type="number" step="0.01" id="ToplamBorc" name="ToplamBorc" class="form-control" placeholder="0.00" value="0" required />
                        <label for="ToplamBorc">Toplam Borç</label>
                    </div>

                    <!-- Status -->
                    <input type="hidden" name="Status" value="true" />
                </div>

                <!-- Footer -->
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- Borç Öde Modal -->
<div class="modal fade" id="borcOdeModal" tabindex="-1" aria-labelledby="borcOdeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-3">
            <!-- Header -->
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-money-bill-wave me-2"></i> Borç Öde
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <input type="hidden" id="borcMusteriId" />

                <div class="form-floating mb-3">
                    <input type="text" id="OdenenBorcTutar" class="form-control" placeholder="Tutar" required />
                    <label for="OdenenBorcTutar">Ödenen Borç Tutarı</label>
                </div>

                <div class="form-floating mb-3">
                    <select id="OdemeTipi" class="form-select">
                        <option value="Nakit">Nakit</option>
                        <option value="Kart">Kart</option>
                        <option value="NoRapor">Rapora Yansıtma</option>
                    </select>
                    <label for="OdemeTipi">Ödeme Tipi</label>
                </div>

                <div class="form-floating">
                    <textarea id="BorcNot" class="form-control" placeholder="Açıklama..." style="height:100px"></textarea>
                    <label for="BorcNot">Kısa Not (İsteğe Bağlı)</label>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Kapat
                </button>
                <button class="btn btn-success" onclick="submitBorcOdeForm()">
                    <i class="fas fa-check me-1"></i> Kaydet
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Veresiye Modal -->
<div class="modal fade" id="veresiyeModal" tabindex="-1" aria-labelledby="veresiyeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-3">
            <!-- Header -->
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-receipt me-2"></i> Veresiye Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <input type="hidden" id="veresiyeMusteriId" />

                <div class="form-floating mb-3">
                    <input type="text" id="VeresiyeTutar" class="form-control" placeholder="Tutar" required />
                    <label for="VeresiyeTutar">Veresiye Tutarı</label>
                </div>

                <div class="form-floating">
                    <textarea id="VeresiyeNot" class="form-control" placeholder="Açıklama..." style="height:100px"></textarea>
                    <label for="VeresiyeNot">Kısa Not (İsteğe Bağlı)</label>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Kapat
                </button>
                <button class="btn btn-info text-white" onclick="submitVeresiyeForm()">
                    <i class="fas fa-check me-1"></i> Kaydet
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Silme Onay Modal -->
<div class="modal fade" id="musteriSilModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-3">

            <!-- Header -->
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i> Müşteri Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <input type="hidden" id="silMusteriId" />
                <p class="mb-0">
                    <strong id="silMusteriAd"></strong> adlı müşteriyi silmek istediğinize emin misiniz?
                </p>
                <small class="text-muted">Bu işlem geri alınamaz.</small>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> İptal
                </button>
                <a href="#" id="silOnayBtn" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i> Sil
                </a>
            </div>
        </div>
    </div>
</div>
