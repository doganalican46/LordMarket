﻿@model LordMarket.Models.Musteriler

@{
    ViewBag.Title = "Yeni Müşteri Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow-sm border-light rounded " style="max-width: 600px; margin: 20px auto;">
    <div class="card-header bg-dark text-white text-center">
        <h3><b>Yeni Müşteri Ekle</b></h3>
    </div>
    <form method="post" class="form-group">
        <div class="card-body">

            <div class="mb-3">
                <label for="MusteriAdSoyad" class="form-label">Müşteri Adı:</label>
                <input type="text" id="MusteriAdSoyad" name="MusteriAdSoyad" class="form-control" required placeholder="Musteri adı girin" />
            </div>

            <div class="mb-3">
                <label for="Notlar" class="form-label">Notlar:</label>
                <input type="text" id="Notlar" name="Notlar" class="form-control" required placeholder="Notlar" />
            </div>

            <div class="mb-3">
                <label for="ToplamBorc" class="form-label">ToplamBorc:</label>
                <input type="text" id="ToplamBorc" name="ToplamBorc" class="form-control" required placeholder="ToplamBorc" />
            </div>

            



            <input type="hidden" name="Status" value="true" />

        </div>

        <div class="card-footer text-center">
            <a href="/Musteri/Musteriler/" class="btn btn-danger btn-sm">İptal</a>
            <button class="btn btn-success btn-sm">Ekle</button>
        </div>
    </form>
</div>

