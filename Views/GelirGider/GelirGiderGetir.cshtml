﻿@model LordMarket.Models.GelirGider
@{
    ViewBag.Title = "GelirGider Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">
            <i class="fas fa-coins me-2"></i>Gelir-Gider Yönetimi
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item">
                    <a href="/Admin/Index" class="text-decoration-none text-dark">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item ">
                    <a href="/GelirGider/GelirGider" class="text-decoration-none text-dark">
                        Gelir-Gider Listesi
                    </a>

                </li>
                <li class="breadcrumb-item active">Gelir-Gider Güncelle</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm border-light rounded" style="max-width: 600px; margin: 20px auto;">
        <div class="card-header tablestyle text-white text-center">
            <h3><b>GelirGider Güncelle</b></h3>
        </div>

        @using (Html.BeginForm("GelirGiderGuncelle", "GelirGider", FormMethod.Post, new { @class = "form-group" }))
        {
            <div class="card-body">
                @Html.HiddenFor(k => k.ID)

                <div class="mb-3">
                    <label>Tür:</label>
                    @Html.DropDownListFor(k => k.Tur, new SelectList(new List<string>
                    {
                        "Gelir",
                        "NakitGider",
                        "KartGider",
                        "KasaGider",
                        "Diger"
                    }), "Tür seçin", new { @class = "form-control", required = "required" })
                </div>


                <div class="mb-3">
                    <label>Notlar:</label>
                    @Html.TextBoxFor(k => k.Notlar, new { @class = "form-control", id = "Notlar", required = "required", placeholder = "Notlar" })

                </div>

                <div class="mb-3">
                    <label>Tutar:</label>
                    @Html.TextBoxFor(k => k.Tutar, new { @class = "form-control", id = "Tutar", required = "required", placeholder = "Tutar" })

                </div>





                <div class="mb-3">
                    <label for="status" class="form-label">Status:</label>
                    @Html.DropDownListFor(k => k.Status, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Akif", Value = "true" },
                        new SelectListItem { Text = "Pasif", Value = "false" }
                    }, new { @class = "form-select", id = "status", required = "required" })
                </div>
            </div>

            <div class="card-footer text-center">
                <a href="/GelirGider/GelirGider/" class="btn btn-danger btn-sm">İptal</a>
                <button class="btn tablestyle btn-sm">Güncelle</button>
            </div>
        }
    </div>


</div>