﻿@model LordMarket.Models.GelirGider

@{
    ViewBag.Title = "Yeni GelirGider Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow-sm border-light rounded " style="max-width: 600px; margin: 20px auto;">
    <div class="card-header bg-dark text-white text-center">
        <h3><b>Yeni GelirGider Ekle</b></h3>
    </div>
    <form method="post" class="form-group">
        <div class="card-body">

            <div class="mb-3">
                <label for="Tur" class="form-label">Tür:</label>
                <select id="Tur" name="Tur" class="form-select" required>
                    <option value="" disabled selected>Tür seçin</option>
                    <option value="Gelir">Gelir</option>
                    <option value="Gider">Gider</option>
                    <option value="Yatırım">Yatırım</option>
                    <option value="Borç">Borç</option>
                    <option value="Alacak">Alacak</option>
                    <option value="Diğer">Diğer</option>
                </select>
            </div>


            <div class="mb-3">
                <label for="Notlar" class="form-label">Notlar:</label>
                <input type="text" id="Notlar" name="Notlar" class="form-control" required placeholder="Notlar" />
            </div>

            <div class="mb-3">
                <label for="Tutar" class="form-label">Tutar:</label>
                <input type="text" id="Tutar" name="Tutar" class="form-control" required placeholder="Tutar" />
            </div>





            <input type="hidden" name="Status" value="true" />

        </div>

        <div class="card-footer text-center">
            <a href="/GelirGider/GelirGider/" class="btn btn-danger btn-sm">İptal</a>
            <button class="btn btn-success btn-sm">Ekle</button>
        </div>
    </form>
</div>

