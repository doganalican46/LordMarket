@model IEnumerable<LordMarket.Models.GelirGider>
@{
    ViewBag.Title = "Gelir-Gider Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">
            <i class="fas fa-coins me-2"></i>Gelir-Gider Yönetimi
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item">
                    <a href="/Admin/Index" class="text-decoration-none text-dark">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active">Gelir-Gider</li>
            </ol>
        </nav>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">Gelir-Gider Listesi</h5>
            <div class="d-flex gap-2">
                <button id="exportExcel" class="btn btn-success btn-sm" title="Excel'e Aktar">
                    <i class="fas fa-file-excel me-1"></i> Excel
                </button>
                <button id="exportPDF" class="btn btn-danger btn-sm" title="PDF Oluştur">
                    <i class="fas fa-file-pdf me-1"></i> PDF
                </button>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#GelirGiderEkleModal">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Ekle
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="DataTable" class="table table-striped table-hover align-middle mb-0" style="min-width: 100%;">
                    <thead class="tablestyle">
                        <tr>
                            <th>Tür</th>
                            <th>Açıklama</th>
                            <th class="text-center">Tutar (₺)</th>
                            <th class="text-center">Tarih</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var turClass = item.Tur == "Gelir" ? "text-success fw-semibold" :
                                           item.Tur == "Gider" ? "text-danger fw-semibold" : "fw-semibold";

                            <tr>
                                <td class="@turClass">@item.Tur</td>
                                <td>@item.Notlar</td>
                                <td class="text-center @turClass">@item.Tutar ₺</td>
                                <td class="text-center">@item.Tarih</td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/GelirGider/GelirGiderGetir/@item.ID" class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a href="javascript:void(0);"
                                           class="btn btn-sm btn-danger"
                                           data-bs-toggle="modal"
                                           data-bs-target="#gelirGiderSilModal"
                                           data-id="@item.ID"
                                           title="Tamamen Kaldır">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="GelirGiderEkleModal" tabindex="-1" aria-labelledby="GelirGiderEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="GelirGiderEkleModalLabel">Yeni Gelir / Gider Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <form action="/GelirGider/YeniGelirGider" method="post">
                <div class="modal-body px-4 py-3">
                    <div class="mb-3">
                        <label for="Tur" class="form-label fw-semibold">Tür:</label>
                        <select id="Tur" name="Tur" class="form-select" required>
                            <option value="" disabled selected>Bir tür seçin</option>
                            <option value="Gelir">Gelir</option>
                            <option value="NakitGider">Nakit Gider</option>
                            <option value="KartGider">Kart Gider</option>
                            <option value="KasaGider">Kasa Gider</option>
                            <option value="Diger">Diğer</option>

                        </select>
                    </div>


                    <div class="mb-3">
                        <label for="Notlar" class="form-label fw-semibold">Açıklama:</label>
                        <input type="text" id="Notlar" name="Notlar" class="form-control" required placeholder="Örn: Elektrik faturası" />
                    </div>
                    <div class="mb-3">
                        <label for="Tutar" class="form-label fw-semibold">Tutar (₺):</label>
                        <input type="text" id="Tutar" name="Tutar" class="form-control" required placeholder="Örn: 150" />
                    </div>
                    <input type="hidden" name="Status" value="true" />
                </div>
                <div class="modal-footer justify-content-between px-4">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                        <i class="fas fa-times-circle"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check-circle"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="gelirGiderSilModal" tabindex="-1" aria-labelledby="gelirGiderSilModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="gelirGiderSilModalLabel">Gelir/Gider Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <div class="modal-body">
                Bu gelir/gideri <strong>tamamen silmek</strong> istediğinize emin misiniz? Bu işlem geri alınamaz!
            </div>

            <div class="modal-footer">
                <a id="modalSilLink" href="#" class="btn btn-danger">Evet, Sil</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script>


    const gelirGiderSilModal = document.getElementById('gelirGiderSilModal');
    gelirGiderSilModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const link = document.getElementById('modalSilLink');
        link.href = `/GelirGider/GelirGiderKaldir/${id}`;
    });


        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "GelirGider" });
            XLSX.writeFile(wb, `GelirGider_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape', unit: 'mm' });

            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Gelir-Gider Listesi', 14, 15);

            doc.setFontSize(10);
            doc.setFont('helvetica', 'normal');
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString()}`, 14, 22);

            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr =>
                Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim())
            );

            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: { fillColor: [41, 128, 185], textColor: 255, fontStyle: 'bold' },
                styles: { fontSize: 8, cellPadding: 2, halign: 'center' },
                margin: { top: 30 }
            });

            doc.save(`GelirGider_${new Date().toLocaleDateString()}.pdf`);
        });
    </script>
}
