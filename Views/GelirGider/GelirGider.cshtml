@model IEnumerable<LordMarket.Models.GelirGider>
@{
    ViewBag.Title = "Gelir-Gider Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-boxes me-2 text-dark"></i>Gelir-Gider Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Gelir-Gider</li>
            </ol>
        </nav>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">Gelir-Gider Listesi</h5>
                <div class="d-flex gap-2">
                    <button id="exportExcel" class="btn btn-success btn-sm me-2" title="Excel'e Aktar">
                        <i class="fas fa-file-excel me-1"></i> Excel
                    </button>
                    <button id="exportPDF" class="btn btn-danger btn-sm me-2" title="PDF Oluştur">
                        <i class="fas fa-file-pdf me-1"></i> PDF
                    </button>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#GelirGiderEkleModal">
                        Yeni Gelir-Gider Ekle
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="DataTable" class="table table-hover align-middle mb-0" style="min-width: 100%;">
                    <thead class="table-dark">
                        <tr>
                            <th>Tür</th>
                            <th>Açıklama</th>
                            <th class="text-center">Tutar (₺)</th>
                            <th class="text-center">Tarih</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var turClass = item.Tur == "Gelir" ? "text-success fw-semibold" :
                                           item.Tur == "Gider" ? "text-danger fw-semibold" : "fw-semibold";
                            var tutarClass = item.Tur == "Gelir" ? "text-success fw-semibold" :
                             item.Tur == "Gider" ? "text-danger fw-semibold" : "fw-semibold";

                            <tr>
                                <td class="@turClass">@item.Tur</td>
                                <td>@item.Notlar</td>
                                <td class="text-center @tutarClass">@item.Tutar ₺</td>
                                <td class="text-center">@item.Tarih</td>
                                <td>
                                    <span class="badge @(item.Status==true ? "bg-success" : "bg-danger")">@(item.Status==true ? "Aktif" : "Pasif")</span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/GelirGider/GelirGiderGetir/@item.ID" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/GelirGider/GelirGiderSil/@item.ID" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="GelirGiderEkleModal" tabindex="-1" aria-labelledby="GelirGiderEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="GelirGiderEkleModalLabel">Yeni Gelir / Gider Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form action="/GelirGider/YeniGelirGider" method="post" enctype="multipart/form-data">
                <div class="modal-body px-4 py-3">
                    <div class="mb-3">
                        <label for="Tur" class="form-label fw-semibold">Tür:</label>
                        <select id="Tur" name="Tur" class="form-select" required>
                            <option value="" disabled selected>Bir tür seçin</option>
                            <option value="Gelir">Gelir</option>
                            <option value="Gider">Gider</option>
                            <option value="Yatırım">Yatırım</option>
                            <option value="Borç">Borç</option>
                            <option value="Alacak">Alacak</option>
                            <option value="Diğer">Diğer</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Notlar" class="form-label fw-semibold">Açıklama / Not:</label>
                        <input type="text" id="Notlar" name="Notlar" class="form-control" required placeholder="Açıklama girin (örneğin: Elektrik faturası)" />
                    </div>
                    <div class="mb-3">
                        <label for="Tutar" class="form-label fw-semibold">Tutar (₺):</label>
                        <input type="number" step="0.01" id="Tutar" name="Tutar" class="form-control" required placeholder="Tutar girin (örneğin: 150.75)" />
                    </div>
                    <input type="hidden" name="Status" value="true" />
                </div>
                <div class="modal-footer justify-content-between px-4">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "GelirGider" });
            XLSX.writeFile(wb, `GelirGider_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape', unit: 'mm' });

            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Gelir-Gider Listesi', 14, 15);

            doc.setFont('helvetica', 'normal');
            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString()}`, 14, 22);

            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr =>
                Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim())
            );

            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: { fillColor: [41, 128, 185], textColor: 255, fontStyle: 'bold' },
                styles: { fontSize: 8, cellPadding: 2, halign: 'center' },
                margin: { top: 30 }
            });

            doc.save(`GelirGider_${new Date().toLocaleDateString()}.pdf`);
        });
    </script>
}
