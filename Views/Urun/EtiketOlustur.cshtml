@model IEnumerable<LordMarket.Models.Urunler>
@{
    ViewBag.Title = "Etiket Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-tags me-2 text-dark"></i>Etiket Oluştur</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Etiket Oluştur</li>
            </ol>
        </nav>
    </div>

    <!-- Ana Kart -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <!-- Kart Başlık -->
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0 fw-semibold">Ürün Listesi</h5>
                <div class="d-flex gap-2">


                    <div class="d-flex justify-content-end mb-3">
                        <button type="button" id="tumunuSecBtn" class="btn btn-outline-secondary">
                            <i class="fas fa-check-square me-1"></i> Tümünü Seç
                        </button>
                    </div>


                </div>


            </div>





            @using (Html.BeginForm("EtiketOlusturPDF", "Urun", FormMethod.Post))
            {
                <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <!-- Sol: PDF Butonu -->
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-file-pdf me-1"></i> PDF Etiket Oluştur
                    </button>

                    <!-- Sağ: Ürün Arama -->
                    <input type="text" id="urunSearch" class="form-control" placeholder="Ürün ara..." style="max-width: 300px;" />
                </div>

                <!-- Ürün Listesi -->
                <div class="row" id="urunListesi">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 mb-3 urun-item" data-urunad="@item.UrunAd.ToLower()">
                            <div class="d-flex align-items-center justify-content-between border rounded p-3 shadow-sm">
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="seciliUrunler" value="@item.ID" id="urun_@item.ID" />
                                        <label class="form-check-label" for="urun_@item.ID">
                                            <strong>@item.UrunAd</strong> - @item.UrunFiyat ₺
                                        </label>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action("UrunGetir", "Urun", new { id = item.ID })" class="btn btn-sm btn-primary" title="Ürünü Güncelle">
                                        <i class="fas fa-edit me-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }




        </div>


    </div>
</div>





<script>
    document.getElementById('urunSearch').addEventListener('input', function () {
        const searchValue = this.value.toLowerCase();
        const urunListesi = document.getElementById('urunListesi');
        const urunler = Array.from(urunListesi.querySelectorAll('.urun-item'));

        // Eşleşen ürünleri ve eşleşmeyenleri ayır
        const eslesenler = [];
        const eslesmeyenler = [];

        urunler.forEach(urun => {
            const urunAd = urun.getAttribute('data-urunad');
            if (urunAd.includes(searchValue)) {
                eslesenler.push(urun);
            } else {
                eslesmeyenler.push(urun);
            }
        });

        // Önce eşleşenleri ekle, sonra diğerlerini
        urunListesi.innerHTML = '';
        eslesenler.forEach(urun => urunListesi.appendChild(urun));
        eslesmeyenler.forEach(urun => urunListesi.appendChild(urun));
    });

    let tumSecildi = false;

    document.getElementById('tumunuSecBtn').addEventListener('click', function () {
        const checkboxlar = document.querySelectorAll('.form-check-input');
        checkboxlar.forEach(cb => cb.checked = !tumSecildi);

        tumSecildi = !tumSecildi;
        this.innerHTML = tumSecildi
            ? '<i class="fas fa-times-circle me-1"></i> Tümünü Bırak'
            : '<i class="fas fa-check-square me-1"></i> Tümünü Seç';
    });
</script>




