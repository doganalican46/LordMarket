@model LordMarket.Models.Urunler

@{
    ViewBag.Title = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded" style="max-width: 650px; margin: 40px auto;">
    <div class="card-header bg-dark text-white text-center">
        <h4 class="mb-0">Yeni Ürün Ekle</h4>
    </div>

    <form method="post" class="form-group">
        <div class="card-body p-4">

            <div class="mb-3">
                <label for="Barkod" class="form-label fw-semibold">Barkod</label>
                <input type="text" id="Barkod" name="Barkod" class="form-control" placeholder="Barkod okutun" required />
            </div>

    

            <div class="mb-3">
                <label for="UrunAd" class="form-label fw-semibold">Ürün Adı</label>
                <input type="text" id="UrunAd" name="UrunAd" class="form-control" placeholder="Ürün adı girin" required />
            </div>

            <div class="mb-3">
                <label for="UrunFiyat" class="form-label fw-semibold">Ürün Fiyatı</label>
                <input type="text" id="UrunFiyat" name="UrunFiyat" class="form-control" placeholder="Ürün fiyatı girin" />
            </div>

            <div class="mb-3">
                <label for="KDVOran" class="form-label fw-semibold">KDV Oranı</label>
                <input type="text" id="KDVOran" name="KDVOran" class="form-control" placeholder="%18" required />
            </div>

            <div class="mb-3">
                <label for="Stok" class="form-label fw-semibold">Stok Miktarı</label>
                <input type="text" id="Stok" name="Stok" class="form-control" placeholder="Stok sayısı girin" />
            </div>

            <div class="mb-3">
                <label for="UrunResmi" class="form-label fw-semibold">Ürün Resmi (Link)</label>
                <input type="text" id="UrunResmi" name="UrunResmi" class="form-control" placeholder="Resim linki girin" />
            </div>

            <input type="hidden" name="Status" value="true" />
            <input type="hidden" name="EklenmeTarihi" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
        </div>

        <div class="card-footer text-center">
            <a href="/Urun/Urunler/" class="btn btn-outline-danger btn-sm px-4">İptal</a>
            <button type="submit" class="btn btn-success btn-sm px-4 ms-2">Ekle</button>
        </div>
    </form>
</div>
