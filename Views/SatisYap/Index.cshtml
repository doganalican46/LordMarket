@model LordMarket.Controllers.SatisYapController.SatisIslemViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lord Büfe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #e74c3c;
            --light-color: #ecf0f1;
        }

        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .header {
            background-color: var(--primary-color);
            color: white;
        }

        .payment-card {
            background-color: var(--secondary-color);
            color: white;
            border-radius: 10px;
        }

        .product-card {
            border-left: 4px solid var(--accent-color);
        }

        .quick-product-btn {
            background-color: var(--light-color);
            border: none;
            transition: all 0.3s;
        }

            .quick-product-btn:hover {
                background-color: #bdc3c7;
                transform: translateY(-2px);
            }

        .action-btn {
            font-weight: bold;
            letter-spacing: 0.5px;
        }

        .delete-btn {
            color: var(--accent-color);
            background: none;
            border: none;
        }

        .payment-input {
            background-color: rgba(255,255,255,0.1);
            color: white;
            border: none;
            border-bottom: 2px solid white;
            border-radius: 0;
            font-size: 1.2rem;
            height: 45px;
        }

            .payment-input:focus {
                background-color: rgba(255,255,255,0.2);
                color: white;
                box-shadow: none;
                border-bottom: 2px solid var(--accent-color);
            }

        .payment-label {
            font-size: 1rem;
        }

        .total-amount {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .barcode-input {
            font-size: 1.1rem;
            height: 45px;
        }

        .payment-methods-nav {
            background-color: var(--light-color);
        }

        .quick-products-container {
            margin-top: 20px;
            border-top: 1px solid #dee2e6;
            padding-top: 15px;
        }
    </style>
</head>
<body>
    <div class="row header text-center">
        <div class="col">
            <h4>LORDTEKEL - SATIŞ EKRANI</h4>
        </div>
    </div>
    <div class="container-fluid p-0">
        <!-- Üst Bilgi Alanı -->
        <div class="row header py-2">
            <div class="col-12">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                    <input type="text" class="form-control barcode-input" placeholder="Barkod okuyun veya ürün adı girin" autofocus>
                    <button class="btn btn-primary" type="button"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </div>

        <div class="row mx-0 mt-3">
            <!-- Sol Taraf - Ürün Listesi -->
            <div class="col-md-8 pe-md-3">
                <!-- Ürün Tablosu -->
                <div class="card mb-3">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="40%">ÜRÜN ADI</th>
                                        <th>FİYAT</th>
                                        <th>ADET</th>
                                        <th>TOPLAM</th>
                                        <th>SİL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="product-card">
                                        <td>Kristal Bardak</td>
                                        <td>₺1,50</td>
                                        <td>
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                <button class="btn btn-outline-secondary" type="button">-</button>
                                                <input type="text" class="form-control text-center" value="2">
                                                <button class="btn btn-outline-secondary" type="button">+</button>
                                            </div>
                                        </td>
                                        <td>₺3,00</td>
                                        <td><button class="delete-btn"><i class="bi bi-trash-fill"></i></button></td>
                                    </tr>
                                    <tr class="product-card">
                                        <td>Ekmek</td>
                                        <td>₺12,50</td>
                                        <td>
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                <button class="btn btn-outline-secondary" type="button">-</button>
                                                <input type="text" class="form-control text-center" value="1">
                                                <button class="btn btn-outline-secondary" type="button">+</button>
                                            </div>
                                        </td>
                                        <td>₺12,50</td>
                                        <td><button class="delete-btn"><i class="bi bi-trash-fill"></i></button></td>
                                    </tr>
                                    <tr class="product-card">
                                        <td>Yoğurt</td>
                                        <td>₺150,00</td>
                                        <td>
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                <button class="btn btn-outline-secondary" type="button">-</button>
                                                <input type="text" class="form-control text-center" value="1">
                                                <button class="btn btn-outline-secondary" type="button">+</button>
                                            </div>
                                        </td>
                                        <td>₺150,00</td>
                                        <td><button class="delete-btn"><i class="bi bi-trash-fill"></i></button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sağ Taraf - Ödeme Alanı -->
            <div class="col-md-4 ps-md-3 mt-3 mt-md-0">
                <div class="payment-card p-3 mb-3">
                    <h5 class="text-center mb-4">ÖDEME BİLGİLERİ</h5>

                    <div class="mb-3">
                        <label class="form-label payment-label">TOPLAM TUTAR</label>
                        <input type="text" class="form-control payment-input total-amount text-end fw-bold" value="₺165,50" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label payment-label">İSKONTO</label>
                        <div class="input-group">
                            <input type="text" class="form-control payment-input" value="₺0,00" readonly>
                            <button class="btn btn-warning" type="button" data-bs-toggle="modal" data-bs-target="#discountModal">Uygula</button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label payment-label">ÖDENEN</label>
                        <input type="text" class="form-control payment-input text-end fw-bold" value="₺0,00">
                    </div>

                    <div class="mb-4">
                        <label class="form-label payment-label">PARA ÜSTÜ</label>
                        <input type="text" class="form-control payment-input text-end fw-bold" value="₺0,00" readonly>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-success action-btn py-2" data-bs-toggle="modal" data-bs-target="#paymentModal">
                            <i class="bi bi-check-circle-fill"></i> SATIŞI TAMAMLA
                        </button>
                    </div>
                </div>

                <!-- İşlem Butonları -->
                <div class="row g-2">
                    <div class="col-6">
                        <button class="btn btn-danger action-btn w-100"><i class="bi bi-x-circle-fill"></i> SATIŞ İPTAL</button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-warning action-btn w-100"><i class="bi bi-pause-fill"></i> İŞLEM BEKLET</button>
                    </div>
                    <div class="col-12">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#urunEkleModal">
                            Yeni Ürün Ekle
                        </button>
                    </div>
                </div>

                <!-- Hızlı Ürün Butonları -->
                <div class="quick-products-container mt-3">
                    <h6 class="mb-2">HIZLI ÜRÜNLER</h6>
                    <div class="row g-2">
                        @foreach (var urun in Model.Urunler.Where(u => u.HizliUrunMu == true))
                        {
                            <div class="col-6">
                                <button class="btn quick-product-btn w-100 py-2">
                                    <div>@urun.UrunAd</div>
                                    <div class="fw-bold">₺@string.Format("{0:N2}", urun.UrunFiyat)</div>
                                </button>
                            </div>
                        }
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="modal fade" id="urunEkleModal" tabindex="-1" aria-labelledby="urunEkleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="urunEkleModalLabel">Yeni Ürün Ekle</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <form action="/SatisYap/YeniUrun" method="post" enctype="multipart/form-data">
                    <div class="modal-body">

                        <div class="mb-3">
                            <label for="Barkod" class="form-label">Barkod</label>
                            <input type="text" name="Barkod" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="KategoriID" class="form-label">Ürün Kategorisi</label>
                            <select name="KategoriID" class="form-select" required>
                                <option disabled selected>Kategori Seçin</option>
                                @foreach (SelectListItem item in ViewBag.Kategoriler)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="UrunAd" class="form-label">Ürün Adı</label>
                            <input type="text" name="UrunAd" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="UrunFiyat" class="form-label">Ürün Fiyatı</label>
                            <input type="text" name="UrunFiyat" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="UrunResmi" class="form-label">Ürün Resmi</label>
                            <input type="file" name="UrunResmiFile" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="Stok" class="form-label">Stok</label>
                            <input type="number" name="Stok" class="form-control" required />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- İskonto Modal -->
    <div class="modal fade" id="discountModal" tabindex="-1" aria-labelledby="discountModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="discountModalLabel">İskonto Uygula</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">İskonto Tutarı (₺)</label>
                        <input type="text" class="form-control" placeholder="₺0,00">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Veya İskonto Yüzdesi (%)</label>
                        <input type="text" class="form-control" placeholder="%0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-warning">İskontoyu Uygula</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ödeme Yöntemi Modal -->
    <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="paymentModalLabel">Ödeme Yöntemi Seçin</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-grid gap-3">
                        <button class="btn btn-outline-primary py-3" data-bs-dismiss="modal">
                            <i class="bi bi-cash-stack fs-1"></i>
                            <h4>NAKİT ÖDEME</h4>
                        </button>
                        <button class="btn btn-outline-success py-3" data-bs-dismiss="modal">
                            <i class="bi bi-credit-card fs-1"></i>
                            <h4>KREDİ KARTI</h4>
                        </button>
                        <button class="btn btn-outline-secondary py-3" data-bs-dismiss="modal">
                            <i class="bi bi-receipt fs-1"></i>
                            <h4>VERESİYE DEFTERİ</h4>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Barkod alanına odaklan
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('.barcode-input').focus();
        });
    </script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.all.min.js"></script>


    <script>
    $(document).ready(function() {
        // Check if there's a success message in TempData
        var successMessage = '@TempData["SuccessMessage"]';

        if (successMessage) {
            // Trigger the SweetAlert2 modal
            Swal.fire({
                icon: 'success',
                title: 'Başarılı',
                text: successMessage,
                confirmButtonText: 'Tamam'
            });
        }
    });
    </script>

</body>
</html>