
@{
    ViewBag.Title = "deneme";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Toptancı İşlemleri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #003d60;
            --secondary-color: #4a9bd8;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
        }

        .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color), #005a87);
            color: white;
            border-bottom: none;
            padding: 1.5rem;
        }

        .modal-body {
            padding: 0;
        }

        .step-card {
            padding: 2rem;
            border-bottom: 1px solid #e9ecef;
        }

            .step-card:last-child {
                border-bottom: none;
            }

        .step-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
        }

            .step-icon i {
                font-size: 1.25rem;
                color: white;
            }

        .step-title {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(0, 61, 96, 0.15);
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #002d4a;
                border-color: #002d4a;
            }

        .btn-outline-secondary {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }

        .financial-card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
            margin-bottom: 1.5rem;
        }

        .financial-card-header {
            background-color: var(--light-color);
            border-bottom: 1px solid #e9ecef;
            padding: 1rem 1.25rem;
            font-weight: 600;
        }

        .financial-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.25rem;
            border-bottom: 1px solid #f1f1f1;
        }

            .financial-item:last-child {
                border-bottom: none;
            }

        .financial-badge {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
        }

        .badge-success {
            background-color: rgba(40, 167, 69, 0.1);
            color: var(--success-color);
        }

        .badge-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: var(--danger-color);
        }

        .badge-primary {
            background-color: rgba(0, 61, 96, 0.1);
            color: var(--primary-color);
        }

        .amount {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .progress-container {
            margin: 1.5rem 0;
        }

        .progress {
            height: 8px;
            border-radius: 10px;
        }

        .progress-bar {
            background-color: var(--primary-color);
        }

        .step-navigation {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
        }

        .confirmation-step {
            text-align: center;
            padding: 2rem;
        }

        .confirmation-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: var(--success-color);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

            .confirmation-icon i {
                font-size: 2rem;
                color: white;
            }

        .summary-card {
            border-radius: 10px;
            border: 1px solid #e9ecef;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="col-6 col-md-4 col-lg-3">
        <button class="btn w-100 d-flex align-items-center justify-content-center gap-2 py-2 shadow-sm rounded text-white"
                style="background-color: #6f42c1;"
                data-bs-toggle="modal" data-bs-target="#toptanciModal">
            <i class="fas fa-truck-loading"></i> Toptancı İşlem
        </button>
    </div>
    <!-- Toptancı İşlemleri Modal -->
    <div class="modal fade" id="toptanciModal" tabindex="-1" aria-labelledby="toptanciModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-building me-2 fs-4"></i>
                        <h5 class="modal-title mb-0 fw-bold">Toptancı İşlemleri</h5>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <!-- Progress Bar -->
                    <div class="progress-container px-4 pt-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-semibold">Toptancı Seçimi</span>
                            <span class="fw-semibold">Finansal Durum</span>
                            <span class="fw-semibold">İşlem Detayları</span>
                            <span class="fw-semibold">Onaylama</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 25%;" id="progressBar"></div>
                        </div>
                    </div>

                    <!-- Step 1: Toptancı Seçimi -->
                    <div class="step-card" id="step1">
                        <div class="d-flex align-items-start">
                            <div class="step-icon">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="step-title">1. Toptancı Seçimi</h5>
                                <p class="text-muted mb-4">İşlem yapmak istediğiniz toptancıyı seçiniz</p>

                                <div class="mb-4">
                                    <label for="toptanciSelect" class="form-label fw-semibold">Toptancı</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-search text-muted"></i>
                                        </span>
                                        <select id="toptanciSelect" class="form-select border-start-0 ps-0">
                                            <option selected disabled>Toptancı Seçin</option>
                                            <!-- Toptancılar buraya eklenecek -->
                                            <option value="1">ABC Toptancı Ltd. Şti.</option>
                                            <option value="2">XYZ Ticaret A.Ş.</option>
                                            <option value="3">Global Tedarik</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Finansal Durum -->
                    <div class="step-card d-none" id="step2">
                        <div class="d-flex align-items-start">
                            <div class="step-icon">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="step-title">2. Finansal Durum</h5>
                                <p class="text-muted mb-4">Seçilen toptancının güncel finansal durumu</p>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="financial-card">
                                            <div class="financial-card-header">
                                                <i class="bi bi-arrow-down-left me-2 text-success"></i>Toplam Alacak
                                            </div>
                                            <div class="financial-item">
                                                <div class="d-flex align-items-center">
                                                    <div class="financial-badge badge-success">
                                                        <i class="bi bi-arrow-down-left"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">Alacak Bakiyesi</div>
                                                    </div>
                                                </div>
                                                <div class="amount text-success" id="ToplamAlacak">0 ₺</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="financial-card">
                                            <div class="financial-card-header">
                                                <i class="bi bi-arrow-up-right me-2 text-danger"></i>Toplam Verecek
                                            </div>
                                            <div class="financial-item">
                                                <div class="d-flex align-items-center">
                                                    <div class="financial-badge badge-danger">
                                                        <i class="bi bi-arrow-up-right"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">Verecek Bakiyesi</div>
                                                    </div>
                                                </div>
                                                <div class="amount text-danger" id="ToplamVerecek">0 ₺</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="financial-card mt-3">
                                    <div class="financial-card-header">
                                        <i class="bi bi-calculator me-2 text-primary"></i>Net Durum
                                    </div>
                                    <div class="financial-item">
                                        <div class="d-flex align-items-center">
                                            <div class="financial-badge badge-primary">
                                                <i class="bi bi-calculator"></i>
                                            </div>
                                            <div>
                                                <div class="fw-medium">Net Bakiye</div>
                                            </div>
                                        </div>
                                        <div class="amount text-primary" id="NetDurum">0 ₺</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: İşlem Detayları -->
                    <div class="step-card d-none" id="step3">
                        <div class="d-flex align-items-start">
                            <div class="step-icon">
                                <i class="bi bi-pencil-square"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="step-title">3. İşlem Detayları</h5>
                                <p class="text-muted mb-4">Yapılacak işlemin detaylarını giriniz</p>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="IslemTutar" class="form-label fw-semibold">İşlem Tutarı</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light">₺</span>
                                                <input type="text" id="IslemTutar" class="form-control" placeholder="0.00" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="IslemTipi" class="form-label fw-semibold">İşlem Tipi</label>
                                            <select id="IslemTipi" class="form-select">
                                                <option value="Alacak">Alacak Ekle</option>
                                                <option value="Verecek">Verecek Ekle</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-0">
                                    <label for="ToptanciIslemNot" class="form-label fw-semibold">Kısa Not (İsteğe Bağlı)</label>
                                    <textarea id="ToptanciIslemNot" class="form-control" rows="3" placeholder="İşlem açıklaması..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 4: Onaylama -->
                    <div class="step-card d-none" id="step4">
                        <div class="d-flex align-items-start">
                            <div class="step-icon">
                                <i class="bi bi-check-lg"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="step-title">4. İşlem Özeti</h5>
                                <p class="text-muted mb-4">İşlem bilgilerinizi kontrol ediniz</p>

                                <div class="confirmation-step">
                                    <div class="confirmation-icon">
                                        <i class="bi bi-check-lg"></i>
                                    </div>
                                    <h4 class="fw-bold text-success mb-3">İşlem Hazır!</h4>
                                    <p class="text-muted mb-4">Aşağıdaki bilgilerle işlemi tamamlamak üzeresiniz.</p>

                                    <div class="summary-card">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <h6 class="fw-semibold text-primary mb-2">İşlem Detayları</h6>
                                                <p class="mb-1"><strong>Toptancı:</strong> <span id="summaryToptanci">-</span></p>
                                                <p class="mb-1"><strong>İşlem Tipi:</strong> <span id="summaryIslemTipi">-</span></p>
                                                <p class="mb-1"><strong>Tutar:</strong> <span id="summaryTutar">-</span></p>
                                                <p class="mb-0"><strong>Not:</strong> <span id="summaryNot">-</span></p>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="fw-semibold text-primary mb-2">Güncel Durum</h6>
                                                <p class="mb-1"><strong>Alacak:</strong> <span id="summaryAlacak">0 ₺</span></p>
                                                <p class="mb-1"><strong>Verecek:</strong> <span id="summaryVerecek">0 ₺</span></p>
                                                <p class="mb-0"><strong>Net Bakiye:</strong> <span id="summaryNet">0 ₺</span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation Buttons -->
                    <div class="step-navigation px-4 pb-4">
                        <button type="button" class="btn btn-outline-secondary" id="prevBtn" disabled>
                            <i class="bi bi-arrow-left me-1"></i>Geri
                        </button>
                        <button type="button" class="btn btn-primary" id="nextBtn">
                            İleri<i class="bi bi-arrow-right ms-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Current state
        let currentStep = 1;
        let selectedToptanci = null;
        let toptanciData = {
            Alacak: 0,
            Verecek: 0
        };

        // DOM elements
        const progressBar = document.getElementById('progressBar');
        const step1 = document.getElementById('step1');
        const step2 = document.getElementById('step2');
        const step3 = document.getElementById('step3');
        const step4 = document.getElementById('step4');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const toptanciSelect = document.getElementById('toptanciSelect');
        const islemTutar = document.getElementById('IslemTutar');
        const islemTipi = document.getElementById('IslemTipi');
        const toptanciNot = document.getElementById('ToptanciIslemNot');

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            updateUI();

            // Toptancı seçimini dinle
            toptanciSelect.addEventListener('change', function () {
                selectedToptanci = this.value;
                if (selectedToptanci) {
                    // Simüle edilmiş veri - gerçek uygulamada API'den gelecek
                    getToptanciAlacakVerecek();
                    nextBtn.disabled = false;
                } else {
                    nextBtn.disabled = true;
                }
            });
        });

        // Navigation
        prevBtn.addEventListener('click', function () {
            if (currentStep > 1) {
                currentStep--;
                updateUI();
            }
        });

        nextBtn.addEventListener('click', function () {
            if (currentStep < 4) {
                // Geçerli adımda doğrulama yap
                if (currentStep === 1 && !selectedToptanci) {
                    alert('Lütfen bir toptancı seçin.');
                    return;
                }

                if (currentStep === 3) {
                    if (!islemTutar.value || isNaN(islemTutar.value) || parseFloat(islemTutar.value) <= 0) {
                        alert('Lütfen geçerli bir işlem tutarı girin.');
                        return;
                    }

                    // Özet bilgilerini güncelle
                    updateSummary();
                }

                currentStep++;
                updateUI();

                // Son adıma ulaşıldığında buton metnini değiştir
                if (currentStep === 4) {
                    nextBtn.innerHTML = 'İşlemi Tamamla<i class="bi bi-check-lg ms-1"></i>';
                    nextBtn.setAttribute('onclick', 'submitToptanciIslemForm()');
                } else {
                    nextBtn.innerHTML = 'İleri<i class="bi bi-arrow-right ms-1"></i>';
                    nextBtn.removeAttribute('onclick');
                }
            }
        });

        // Update UI based on current step
        function updateUI() {
            // Update progress bar
            progressBar.style.width = `${(currentStep / 4) * 100}%`;

            // Show/hide steps
            step1.classList.toggle('d-none', currentStep !== 1);
            step2.classList.toggle('d-none', currentStep !== 2);
            step3.classList.toggle('d-none', currentStep !== 3);
            step4.classList.toggle('d-none', currentStep !== 4);

            // Update buttons
            prevBtn.disabled = currentStep === 1;

            // Step 2'ye geçerken finansal verileri güncelle
            if (currentStep === 2 && selectedToptanci) {
                getToptanciAlacakVerecek();
            }
        }

        // Toptancı alacak/verecek verilerini getir
        function getToptanciAlacakVerecek() {
            // Burada API çağrısı yapılacak
            // Şimdilik simüle edilmiş veri kullanıyoruz
            const mockData = {
                '1': { Alacak: 12500, Verecek: 8500 },
                '2': { Alacak: 8300, Verecek: 11200 },
                '3': { Alacak: 15600, Verecek: 9200 }
            };

            toptanciData = mockData[selectedToptanci] || { Alacak: 0, Verecek: 0 };

            // UI'ı güncelle
            document.getElementById('ToplamAlacak').textContent = formatCurrency(toptanciData.Alacak);
            document.getElementById('ToplamVerecek').textContent = formatCurrency(toptanciData.Verecek);

            const net = toptanciData.Alacak - toptanciData.Verecek;
            const netDurumElement = document.getElementById('NetDurum');
            netDurumElement.textContent = formatCurrency(net);

            // Net durumun rengini ayarla
            if (net > 0) {
                netDurumElement.className = 'amount text-success';
            } else if (net < 0) {
                netDurumElement.className = 'amount text-danger';
            } else {
                netDurumElement.className = 'amount text-secondary';
            }
        }

        // Özet bilgilerini güncelle
        function updateSummary() {
            document.getElementById('summaryToptanci').textContent = toptanciSelect.options[toptanciSelect.selectedIndex].text;
            document.getElementById('summaryIslemTipi').textContent = islemTipi.options[islemTipi.selectedIndex].text;
            document.getElementById('summaryTutar').textContent = formatCurrency(parseFloat(islemTutar.value));
            document.getElementById('summaryNot').textContent = toptanciNot.value || 'Not eklenmedi.';

            // Güncel durumu hesapla
            const yeniAlacak = islemTipi.value === 'Alacak' ?
                toptanciData.Alacak + parseFloat(islemTutar.value) : toptanciData.Alacak;
            const yeniVerecek = islemTipi.value === 'Verecek' ?
                toptanciData.Verecek + parseFloat(islemTutar.value) : toptanciData.Verecek;
            const yeniNet = yeniAlacak - yeniVerecek;

            document.getElementById('summaryAlacak').textContent = formatCurrency(yeniAlacak);
            document.getElementById('summaryVerecek').textContent = formatCurrency(yeniVerecek);
            document.getElementById('summaryNet').textContent = formatCurrency(yeniNet);
        }

        // Para birimi formatı
        function formatCurrency(amount) {
            return new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY',
                minimumFractionDigits: 2
            }).format(amount);
        }

        // İşlem formunu gönder
        function submitToptanciIslemForm() {
            // Burada gerçek form gönderimi yapılacak
            alert('İşlem başarıyla tamamlandı!');

            // Modal'ı kapat
            const modal = bootstrap.Modal.getInstance(document.getElementById('toptanciModal'));
            modal.hide();

            // Formu sıfırla
            resetForm();
        }

        // Formu sıfırla
        function resetForm() {
            currentStep = 1;
            selectedToptanci = null;
            toptanciSelect.selectedIndex = 0;
            islemTutar.value = '';
            toptanciNot.value = '';
            islemTipi.selectedIndex = 0;
            updateUI();
        }

        // Tümünü sıfırla
        function resetToptanci() {
            if (!selectedToptanci) {
                alert('Lütfen önce bir toptancı seçin.');
                return;
            }

            if (confirm('Bu toptancıya ait tüm alacak/verecek işlemleri sıfırlamak istediğinizden emin misiniz?')) {
                // Burada sıfırlama işlemi yapılacak
                alert('Tüm işlemler başarıyla sıfırlandı.');
                getToptanciAlacakVerecek();
            }
        }
    </script>
</body>
</html>

