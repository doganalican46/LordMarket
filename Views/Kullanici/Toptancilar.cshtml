@model IEnumerable<LordMarket.Models.Kullanicilar>
@{
    ViewBag.Title = "Toptancı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-truck me-2 text-dark"></i>Toptancı Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Toptancılar</li>
            </ol>
        </nav>
    </div>

    <!-- Filtreleme ve Arama -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Toptancı ara...">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end gap-2">
                        <button id="exportExcel" class="btn btn-success" title="Excel'e Aktar">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button id="exportPDF" class="btn btn-danger" title="PDF Oluştur">
                            <i class="fas fa-file-pdf me-1"></i> PDF
                        </button>
                        <button type="button" class="btn tablestyle" data-bs-toggle="modal" data-bs-target="#ToptanciEkleModal">
                            <i class="fas fa-plus me-1"></i> Yeni Toptancı
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toptancı Kartları -->
    <div class="row g-4">
        @foreach (var Toptanci in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 fw-semibold text-truncate">@Toptanci.Username</h5>
                        <span class="badge bg-primary rounded-pill">
                            <i class="fas fa-truck me-1"></i> Toptancı
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-center mb-3">
                            <div class="bg-light rounded-circle p-4">
                                <i class="fas fa-store-alt text-primary fs-3"></i>
                            </div>
                        </div>

                        <div class="mb-3">
                            <h6 class="text-muted mb-2">Geldiği Günler:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @{
                                    var gunler = Toptanci.Password?.Split(new[] { ", " }, StringSplitOptions.RemoveEmptyEntries) ?? new string[0];
                                    foreach (var gun in gunler)
                                    {
                                        <span class="badge bg-info">@gun</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 pt-0">
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            <a href="/Kullanici/ToptanciGetir/@Toptanci.ID" class="btn btn-sm btn-warning flex-grow-1" title="Düzenle">
                                <i class="fas fa-edit me-1"></i> Düzenle
                            </a>
                            <a href="/Kullanici/ToptanciKaldir/@Toptanci.ID" class="btn btn-sm btn-danger flex-grow-1"
                               onclick="return confirm('Toptancıyı silmek istediğinize emin misiniz?');" title="Sil">
                                <i class="fas fa-trash me-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





<!-- Modal -->
<div class="modal fade" id="ToptanciEkleModal" tabindex="-1" aria-labelledby="ToptanciEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header tablestyle text-white">
                <h5 class="modal-title" id="ToptanciEkleModalLabel">Yeni Kullanici Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form action="/Kullanici/YeniToptanci" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="Username" class="form-label">Toptancı Adı</label>
                        <input type="text" id="Username" name="Username" class="form-control" required placeholder="Toptancı Adı" />
                    </div>

                    <!-- Gün Checkbox'ları -->
                    <div class="mb-3">
                        <label class="form-label">Toptancının Geldiği Günler</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Pazartesi" id="gun1">
                            <label class="form-check-label" for="gun1">Pazartesi</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Salı" id="gun2">
                            <label class="form-check-label" for="gun2">Salı</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Çarşamba" id="gun3">
                            <label class="form-check-label" for="gun3">Çarşamba</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Perşembe" id="gun4">
                            <label class="form-check-label" for="gun4">Perşembe</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Cuma" id="gun5">
                            <label class="form-check-label" for="gun5">Cuma</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Cumartesi" id="gun6">
                            <label class="form-check-label" for="gun6">Cumartesi</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Pazar" id="gun7">
                            <label class="form-check-label" for="gun7">Pazar</label>
                        </div>
                    </div>

                    <!-- Gizli alan: Seçilen günleri buraya yazacağız -->
                    <input type="hidden" id="Password" name="Password" />






                    <input type="hidden" name="Status" value="true" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn tablestyle">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>


        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Kullanicilar" });
            XLSX.writeFile(wb, `Kullanicilar_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm'
            });

            // Başlık
            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Kullanici Listesi', 14, 15);

            doc.setFont('helvetica', 'normal');
            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString()}`, 14, 22);

            // Tablo verileri
            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => {
                return Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim());
            });

            // PDF oluşturma
            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: {
                    fillColor: [41, 128, 185],
                    textColor: 255,
                    fontStyle: 'bold'
                },
                columnStyles: {
                    0: { cellWidth: 10 },
                    1: { cellWidth: 15 },
                    2: { cellWidth: 'auto' },
                    3: { cellWidth: 20 },
                    4: { cellWidth: 15 },
                    5: { cellWidth: 15 },
                    6: { cellWidth: 25 }
                },
                styles: {
                    fontSize: 8,
                    cellPadding: 2,
                    halign: 'center'
                },
                margin: { top: 30 }
            });

            doc.save(`Kullanicilar_${new Date().toLocaleDateString()}.pdf`);
        });

        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.col-xl-3.col-lg-4.col-md-6.col-sm-12');

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                card.style.display = cardText.includes(searchTerm) ? '' : 'none';
            });
        });


    </script>
}

<script>
    document.querySelector("form").addEventListener("submit", function (e) {
        const gunler = [];
        document.querySelectorAll(".form-check-input:checked").forEach(cb => {
            gunler.push(cb.value);
        });

        document.getElementById("Password").value = gunler.join(", ");
    });
</script>
