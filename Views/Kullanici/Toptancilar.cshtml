@model IEnumerable<LordMarket.Models.Kullanicilar>
@{
    ViewBag.Title = "Toptancı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-users me-2 text-dark"></i>Toptancı Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Toptancılar</li>
            </ol>
        </nav>
    </div>


   

    <!-- Ana Kart -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <!-- Kart Başlık -->
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">Toptancı Listesi</h5>
                <div class="d-flex gap-2">
                    <div class="btn-group">
                        <button id="exportExcel" class="btn btn-success btn-sm me-2" title="Excel'e Aktar">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button id="exportPDF" class="btn btn-danger btn-sm me-2" title="PDF Oluştur">
                            <i class="fas fa-file-pdf me-1"></i> PDF
                        </button>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ToptanciEkleModal">
                            Yeni Toptancı Ekle
                        </button>
                    </div>

                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="DataTable" class="table table-hover align-middle mb-0" style="min-width: 100%;">
                    <thead class="table-dark">
                        <tr>
                            <th>Resim</th>

                            <th>Toptancı Adı</th>
                            <th width="100px" class="text-center">Günler</th>
                            <th width="100px" class="text-center">Durum</th>
                            <th width="150px" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Kullanici in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center position-relative">
                                        <img src="@(Kullanici.Image != null ? Kullanici.Image : "https://cdn-icons-png.flaticon.com/512/219/219983.png")"
                                             alt="Ürün Resmi"
                                             class="rounded-circle border"
                                             style="width: 40px; height: 40px; object-fit: cover;">

                                    </div>

                                </td>
                                <td class="fw-semibold">
                                    @Kullanici.Username
                                    <a href="/Kullanici/ToptanciKaldir/@Kullanici.ID" class="btn btn-outline-danger btn-sm" onclick="return confirm('Toptancıyı silmek istediğinize emin misiniz?');" title="Kaldır">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>

                                <td class="text-center">
                                    @Kullanici.Password
                                </td>

                                <td class="text-center">
                                    <span class="badge @(Kullanici.Status == true ? "bg-success" : "bg-danger")">
                                        @(Kullanici.Status == true ? "Aktif" : "Pasif")
                                    </span>
                                </td>

                                <td class="text-center">
                                    <div class="d-flex flex-wrap justify-content-center gap-1">

                                        <a href="/Kullanici/ToptanciGetir/@Kullanici.ID" class="btn btn-warning btn-sm" title="Güncelle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a href="/Kullanici/ToptanciSil/@Kullanici.ID" class="btn btn-danger btn-sm" onclick="return confirm('Toptancıyı silmek istediğinize emin misiniz?');" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        let selectedKullaniciId = 0;
        function setKullaniciId(id) {
            selectedKullaniciId = id;
            document.getElementById("borcKullaniciId").value = id;
            document.getElementById("veresiyeKullaniciId").value = id;
        }

        function submitBorcOdeForm() {
            var id = $('#borcKullaniciId').val();
            var tutar = $('#OdenenBorcTutar').val();
            var not = $('#BorcNot').val();

            $.post('/Kullanici/BorcOde', { id: id, OdenenBorcTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        function submitVeresiyeForm() {
            var id = $('#veresiyeKullaniciId').val();
            var tutar = $('#VeresiyeTutar').val();
            var not = $('#VeresiyeNot').val();

            $.post('/Kullanici/VeresiyeEkle', { id: id, VeresiyeTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Kullanicilar" });
            XLSX.writeFile(wb, `Kullanicilar_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm'
            });

            // Başlık
            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Kullanici Listesi', 14, 15);

            doc.setFont('helvetica', 'normal');
            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString()}`, 14, 22);

            // Tablo verileri
            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => {
                return Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim());
            });

            // PDF oluşturma
            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: {
                    fillColor: [41, 128, 185],
                    textColor: 255,
                    fontStyle: 'bold'
                },
                columnStyles: {
                    0: { cellWidth: 10 },
                    1: { cellWidth: 15 },
                    2: { cellWidth: 'auto' },
                    3: { cellWidth: 20 },
                    4: { cellWidth: 15 },
                    5: { cellWidth: 15 },
                    6: { cellWidth: 25 }
                },
                styles: {
                    fontSize: 8,
                    cellPadding: 2,
                    halign: 'center'
                },
                margin: { top: 30 }
            });

            doc.save(`Kullanicilar_${new Date().toLocaleDateString()}.pdf`);
        });

        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#DataTable tbody tr');

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                row.style.display = rowText.includes(searchTerm) ? '' : 'none';
            });
        });


    </script>
}



<!-- Modal -->
<div class="modal fade" id="ToptanciEkleModal" tabindex="-1" aria-labelledby="ToptanciEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="ToptanciEkleModalLabel">Yeni Kullanici Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form action="/Kullanici/YeniToptanci" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="Username" class="form-label">Toptancı Adı</label>
                        <input type="text" id="Username" name="Username" class="form-control" required placeholder="Toptancı Adı" />
                    </div>

                    <!-- Gün Checkbox'ları -->
                    <div class="mb-3">
                        <label class="form-label">Toptancının Geldiği Günler</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Pazartesi" id="gun1">
                            <label class="form-check-label" for="gun1">Pazartesi</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Salı" id="gun2">
                            <label class="form-check-label" for="gun2">Salı</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Çarşamba" id="gun3">
                            <label class="form-check-label" for="gun3">Çarşamba</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Perşembe" id="gun4">
                            <label class="form-check-label" for="gun4">Perşembe</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Cuma" id="gun5">
                            <label class="form-check-label" for="gun5">Cuma</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Cumartesi" id="gun6">
                            <label class="form-check-label" for="gun6">Cumartesi</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Pazar" id="gun7">
                            <label class="form-check-label" for="gun7">Pazar</label>
                        </div>
                    </div>

                    <!-- Gizli alan: Seçilen günleri buraya yazacağız -->
                    <input type="hidden" id="Password" name="Password" />



                    <div class="mb-3">
                        <label for="Image" class="form-label">Profil Fotoğrafı</label>
                        <input type="text" id="Image" name="Image" class="form-control"
                               value="https://cdn-icons-png.flaticon.com/512/219/219983.png" />
                    </div>


                    <input type="hidden" name="Status" value="true" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>





<script>
    document.querySelector("form").addEventListener("submit", function (e) {
        const gunler = [];
        document.querySelectorAll(".form-check-input:checked").forEach(cb => {
            gunler.push(cb.value);
        });

        document.getElementById("Password").value = gunler.join(", ");
    });
</script>
