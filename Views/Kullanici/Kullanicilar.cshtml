@model IEnumerable<LordMarket.Models.Kullanicilar>
@{
    ViewBag.Title = "Kullanici Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-user-shield me-2 text-dark"></i>Kullanıcı Yönetimi</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active">Kullanıcılar</li>
            </ol>
        </nav>
    </div>

    <!-- Filtreleme ve Arama -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Kullanıcı ara...">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end gap-2">
                        <button id="exportExcel" class="btn btn-success" title="Excel'e Aktar">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button id="exportPDF" class="btn btn-danger" title="PDF Oluştur">
                            <i class="fas fa-file-pdf me-1"></i> PDF
                        </button>
                        <button type="button" class="btn tablestyle" data-bs-toggle="modal" data-bs-target="#KullaniciEkleModal">
                            <i class="fas fa-plus me-1"></i> Yeni Kullanıcı
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Kullanıcı Kartları -->
    <div class="row g-4">
        @foreach (var Kullanici in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 fw-semibold text-truncate">@Kullanici.Username</h5>
                        
                        <span class=" badge rounded-pill @(Kullanici.Role == "admin" ? "bg-success" : "bg-primary")">
                            @(Kullanici.Role == "admin" ? "Admin" : "Normal Kullanıcı")
                        </span>
                    </div>
                    <div class="card-body text-center">
                        <div class="position-relative d-inline-block mb-3">
                            <img src="@(Kullanici.Image != null ? Kullanici.Image : "https://cdn-icons-png.flaticon.com/512/219/219983.png")"
                                 alt="Profil Resmi"
                                 class="rounded-circle border"
                                 style="width: 100px; height: 100px; object-fit: cover;">
                            
                        </div>

                        

                    </div>
                    <div class="card-footer bg-white border-top-0 pt-0">
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            <a href="/Kullanici/KullaniciGetir/@Kullanici.ID" class="btn btn-sm btn-warning flex-grow-1" title="Düzenle">
                                <i class="fas fa-edit me-1"></i> Düzenle
                            </a>
                            <a href="/Kullanici/KullaniciSil/@Kullanici.ID" class="btn btn-sm btn-danger flex-grow-1"
                               onclick="return confirm('Kullanıcıyı silmek istediğinize emin misiniz?');" title="Sil">
                                <i class="fas fa-trash me-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>

        let selectedKullaniciId = 0;
        function setKullaniciId(id) {
            selectedKullaniciId = id;
            document.getElementById("borcKullaniciId").value = id;
            document.getElementById("veresiyeKullaniciId").value = id;
        }

        function submitBorcOdeForm() {
            var id = $('#borcKullaniciId').val();
            var tutar = $('#OdenenBorcTutar').val();
            var not = $('#BorcNot').val();

            $.post('/Kullanici/BorcOde', { id: id, OdenenBorcTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        function submitVeresiyeForm() {
            var id = $('#veresiyeKullaniciId').val();
            var tutar = $('#VeresiyeTutar').val();
            var not = $('#VeresiyeNot').val();

            $.post('/Kullanici/VeresiyeEkle', { id: id, VeresiyeTutar: tutar, Not: not }, function () {
                location.reload();
            });
        }

        // Excel Export
        document.getElementById('exportExcel').addEventListener('click', function () {
            const table = document.getElementById('DataTable');
            const wb = XLSX.utils.table_to_book(table, { sheet: "Kullanicilar" });
            XLSX.writeFile(wb, `Kullanicilar_${new Date().toLocaleDateString()}.xlsx`);
        });

        // PDF Export
        document.getElementById('exportPDF').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm'
            });

            // Başlık
            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Kullanici Listesi', 14, 15);

            doc.setFont('helvetica', 'normal');
            doc.setFontSize(10);
            doc.text(`Oluşturulma Tarihi: ${new Date().toLocaleDateString()}`, 14, 22);

            // Tablo verileri
            const table = document.getElementById('DataTable');
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.innerText.trim());
            const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => {
                return Array.from(tr.querySelectorAll('td')).map(td => td.innerText.trim());
            });

            // PDF oluşturma
            doc.autoTable({
                head: [headers],
                body: rows,
                startY: 30,
                theme: 'grid',
                headStyles: {
                    fillColor: [41, 128, 185],
                    textColor: 255,
                    fontStyle: 'bold'
                },
                columnStyles: {
                    0: { cellWidth: 10 },
                    1: { cellWidth: 15 },
                    2: { cellWidth: 'auto' },
                    3: { cellWidth: 20 },
                    4: { cellWidth: 15 },
                    5: { cellWidth: 15 },
                    6: { cellWidth: 25 }
                },
                styles: {
                    fontSize: 8,
                    cellPadding: 2,
                    halign: 'center'
                },
                margin: { top: 30 }
            });

            doc.save(`Kullanicilar_${new Date().toLocaleDateString()}.pdf`);
        });

        // Arama fonksiyonu
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.col-xl-3.col-lg-4.col-md-6.col-sm-12');

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                card.style.display = cardText.includes(searchTerm) ? '' : 'none';
            });
        });


    </script>
}



<!-- Modal -->
<div class="modal fade" id="KullaniciEkleModal" tabindex="-1" aria-labelledby="KullaniciEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header tablestyle text-white">
                <h5 class="modal-title" id="KullaniciEkleModalLabel">Yeni Kullanici Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form action="/Kullanici/YeniKullanici" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="Username" class="form-label">Kullanici Adı</label>
                        <input type="text" id="Username" name="Username" class="form-control" required placeholder="Kullanici adı girin" />
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="Password" class="form-label">Şifre</label>
                        <input type="password" id="Password" name="Password" class="form-control pe-5" required placeholder="Şifre" />
                        <button type="button" class="btn btn-sm btn-outline-secondary position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword()">
                            Göster
                        </button>
                    </div>

                    <div class="mb-3">
                        <label for="Role" class="form-label">Rol</label>
                        <select id="Role" name="Role" class="form-select" required>
                            <option value="" disabled selected>Rol Seçin</option>
                            <option value="admin">Admin</option>
                            <option value="user">Normal Kullanıcı</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">Profil Fotoğrafı</label>
                        <input type="text" id="Image" name="Image" class="form-control"
                               value="https://cdn-icons-png.flaticon.com/512/219/219983.png" />
                    </div>


                    <input type="hidden" name="Status" value="true" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn tablestyle">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById("Password");
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;
    }
</script>



